# AI Background Channel Studio - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/dbname
# Example: postgresql://user:password@ep-cool-example-123456.us-east-2.aws.neon.tech/yt_music

# ============================================================================
# STORAGE (Local file storage for MVP, S3/R2 for production)
# ============================================================================
STORAGE_PROVIDER=local
# Options: local, s3, r2

# For S3/R2 (if STORAGE_PROVIDER is not 'local')
STORAGE_BUCKET=your-bucket-name
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT=  # Optional, for R2 or S3-compatible services

# ============================================================================
# LLM / AI GENERATION
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
# Used for prompt generation and metadata generation

# ============================================================================
# MUSIC PROVIDER
# ============================================================================
MUSIC_PROVIDER=dummy
# Options: dummy, mubert, beatoven

# For Mubert (when MUSIC_PROVIDER=mubert)
MUBERT_API_KEY=your-mubert-api-key

# For Beatoven (when MUSIC_PROVIDER=beatoven)
BEATOVEN_API_KEY=your-beatoven-api-key

# ============================================================================
# VISUAL PROVIDER
# ============================================================================
VISUAL_PROVIDER=dummy
# Options: dummy, leonardo, gemini

# For Leonardo.ai (when VISUAL_PROVIDER=leonardo)
LEONARDO_API_KEY=your-leonardo-api-key

# For Google Gemini (when VISUAL_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key

# ============================================================================
# YOUTUBE DATA API (Future feature)
# ============================================================================
YOUTUBE_CLIENT_ID=your-oauth-client-id
YOUTUBE_CLIENT_SECRET=your-oauth-client-secret

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Output directory for generated assets (relative or absolute path)
OUTPUT_DIRECTORY=./output

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Background worker settings
WORKER_POLL_INTERVAL=30  # seconds
WORKER_MAX_RETRIES=3

# ============================================================================
# FFMPEG SETTINGS
# ============================================================================
FFMPEG_VIDEO_BITRATE=8000k  # 8 Mbps for 1080p
FFMPEG_AUDIO_BITRATE=192k   # 192 kbps for AAC
FFMPEG_RESOLUTION=1920x1080
FFMPEG_CROSSFADE_DURATION=3  # seconds

# ============================================================================
# FRONTEND (Next.js)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
# URL of the FastAPI backend for frontend to connect to
